@model Booking
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row justify-content-center" style="margin-top: 40px;">
        <div class="col-12 col-md-8">
            <form asp-action="Edit" asp-controller="Bookings" method="post" class="needs-validation">
                <h3 class="text-center mb-4">Edit Booking</h3>
                <input type="hidden" asp-for="BookingId" />
                <input type="hidden" asp-for="TourPackageId" />

                <div class="form-group row mb-3">
                    <label class="col-form-label col-2" asp-for="TravelerName"></label>
                    <div class="col-10">
                        <input asp-for="TravelerName" class="form-control" />
                        <span asp-validation-for="TravelerName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-form-label col-2" asp-for="PhoneNumber"></label>
                    <div class="col-10">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-form-label col-2" asp-for="NumberOfTravelers"></label>
                    <div class="col-10">
                        <input asp-for="NumberOfTravelers" class="form-control" />
                        <span asp-validation-for="NumberOfTravelers" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-form-label col-2" asp-for="BookingDate"></label>
                    <div class="col-10">
                        <input type="date" asp-for="BookingDate" class="form-control" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-form-label col-2" asp-for="BookingStatus"></label>
                    <div class="col-10">
                        <input asp-for="BookingStatus" class="form-control" />
                        <span asp-validation-for="BookingStatus" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <div class="col-10 offset-2">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-controller="TourPackages" class="btn btn-secondary"><i class="bi bi-arrow-return-left"></i> Back to index</a>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts
    {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/jquery-validate/jquery.validate.js"></script>
    <script src="~/libs/jquery-validate/jquery.validate.unobtrusive.js"></script>
}



